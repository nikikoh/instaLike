.container
  %ul
    - @profile.errors.full_messages.each do |message|
      %li= message

  = form_with(model: @profile, url: profile_path, method: 'put', local: true) do |f|
    %div
      = f.label :avatar, 'アバター'
    %div
      = f.file_field :avatar
    %div
      = f.label :name, 'ハンドルネーム'
    %div
      = f.text_field :name, class: 'text'
    %div
      = f.label :bio, '自己紹介'
    %div
      = f.text_area :bio

    = f.submit '保存', class: 'btn-primary'