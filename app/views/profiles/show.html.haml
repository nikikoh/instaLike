.container.profilePage

  // ブラウザバックアイコン
  .profilePage_site_backer
    = link_to :back do
      %i.fas.fa-arrow-left.fa-3x

  // ユーザー要素
  .profilePage_user
    .profilePage_user_name
      = current_user.name
    .user_icon
      = image_tag current_user.avatar_image.url, class: 'profilePage_user_image'

  .profilePage_user_actionButton
    - if current_user
      = link_to 'Edit', edit_profile_path(current_user.id)
    - else
      = 'Follow'

= link_to 'ホームへ', posts_path(current_user.id)
